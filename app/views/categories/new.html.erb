<h1>New category</h1>

<%= form_for(@category) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :icon %>
    <%= f.text_field :icon %>
  </div>
  <div class="actions">
    <%= f.submit "Create category" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back to categories", categories_path %>
</div>