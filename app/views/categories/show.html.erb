<div class='category-section'>
    <div class='header-category'>
        <div class='upper-header'>
          <%= link_to unauthenticated_root_path, class: "back-root" do %>
              <span class="material-symbols-outlined">
              arrow_back
              </span>
          <% end %>
          <h4><%= @category.name %></h4>
          <%= link_to unauthenticated_root_path, class: "menu" do %>
                <span class="material-symbols-outlined">
              menu
              </span>
          <% end %>
        </div>
        <div class='lower-header'>
            <h4>Most recent</h4>
            <h6>
              <%= button_to "Logout", destroy_user_session_path, method: :delete %>
            </h6>
        </div>
    </div>
    <div class='stat'>
      <p>Total spend </p>
      <p class='total-amount'>$<%= @amount_category %></p>
    </div>
    <p style="color: green"><%= notice %></p>
    <div class='category-list'>
      <% @category.spends.each do |spend| %>
          <div class='category spend'>
            <p class='title'><%= spend.name %></p>
            <p class='amount'>$<%= spend.amount %></p>
          </div>
      <% end %>
    </div>
    <div class='action-add'>
      <%= link_to "New Spend", new_category_spend_path(@category), class: 'btn-add' %>
    </div>
</div>